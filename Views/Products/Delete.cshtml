@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Eintrag löschen";
}

<h1>Löschen</h1>

<h3>Sind Sie sicher, diesen Eintrag löschen zu wollen?</h3>
<div>
    <h4>Produktdetails</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Preis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Beschreibung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück zur Liste</a>
    </form>
</div>
