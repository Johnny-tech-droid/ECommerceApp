@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-10">
            <img src="/assets/images/placeholder01.JPEG" alt="product-image" class="product-image" />
        </dt>
        <dd>

        </dd>
        
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Preis
        </dt>
        <dd class = "col-sm-10">
            @(Model.Price.ToString("C"))
            
        </dd>
        <dt class = "col-sm-2">
            Beschreibung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       


    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Bearbeiten</a> |
    <a asp-action="Index" class="btn btn-primary">Zurück zur Liste</a>
</div>
