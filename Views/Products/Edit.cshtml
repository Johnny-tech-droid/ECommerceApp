@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Eintrag bearbeiten";
}

<h1>Bearbeiten</h1>

<h4>@Html.DisplayFor(model => model.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for ="Price" class="control-label">Preis</label>
                <input asp-for="Price" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beschreibung</label>
                <input asp-for="Description" class="form-control" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
    <a asp-action="Delete" asp-route-id="@Model?.Id">Löschen</a>
    <a asp-action="Index">Abbrechen</a>
</div>

