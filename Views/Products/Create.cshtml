@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Neuer Eintrag";
    <meta name="viewport" content="width=device-width, initial-scale=1">
}

<h1>Neuer Eintrag</h1>

<h4>Produktdetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
           
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Preis</label>
                <input asp-for="Price" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beschreibung</label>
                <input asp-for="Description" class="form-control" />
               
            </div>
            <div class="form-group">
                <input type="submit" value="Erstellen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Abbrechen</a>
    
    
</div>


